{
  "name": "wcfactory",
  "version": "0.1.8",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/lit-element*",
      "**/lit-element*/**"
    ]
  },
  "license": "Apache-2.0",
  "devDependencies": {
    "eslint": "5.16.0",
    "eslint-config-prettier": "4.1.0",
    "eslint-plugin-node": "8.0.1",
    "eslint-plugin-prettier": "3.0.1",
    "lerna": "3.13.2",
    "prettier": "1.16.4",
    "concurrently": "^4.1.0"
  },
  "scripts": {
    "postinstall": "patch-package",
    "bootstrap": "lerna bootstrap",
    "lint": "eslint -c package.json --ignore-path .gitignore --no-eslintrc .",
    "format": "eslint -c package.json --ignore-path .gitignore --no-eslintrc --fix .",
    "dev:ui": "concurrently \"cd packages/ui && npm run start\" \"cd packages/graphql-server && npm run dev\""
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "eslint:recommended",
      "plugin:node/recommended",
      "plugin:prettier/recommended"
    ]
  },
  "engines": {
    "node": "^6.0.0 || ^8.0.0 || ^10.0.0 || ^11.0.0",
    "yarn": "^1.10.1"
  },
  "dependencies": {
    "patch-package": "^6.0.5",
    "postinstall-postinstall": "^2.0.0"
  }
}
